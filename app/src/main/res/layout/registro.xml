<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="154dp"
        android:layout_height="25dp"
        android:layout_marginStart="129dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="4dp"
        android:text="¿Ya tienes una cuenta?"
        app:layout_constraintBottom_toTopOf="@+id/btnIrlogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCrearUsuario" />

    <Button
        android:id="@+id/btnCrearUsuario"
        android:layout_width="155dp"
        android:layout_height="61dp"
        android:layout_marginBottom="69dp"
        android:backgroundTint="#3601C3"
        android:text="Registrarme"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtContrasenaRegister" />

    <Button
        android:id="@+id/btnIrlogin"
        android:layout_width="177dp"
        android:layout_height="67dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="36dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.222" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="463dp"
        android:text="Registrar usuario"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtCorreoRegister"
        android:layout_width="221dp"
        android:layout_height="66dp"
        android:layout_marginBottom="55dp"
        android:ems="10"
        android:hint="Correo electrónico"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/txtContrasenaRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/txtContrasenaRegister"
        android:layout_width="223dp"
        android:layout_height="63dp"
        android:layout_marginBottom="52dp"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btnCrearUsuario"
        app:layout_constraintStart_toStartOf="@+id/txtCorreoRegister"
        app:layout_constraintTop_toBottomOf="@+id/txtCorreoRegister" />
</androidx.constraintlayout.widget.ConstraintLayout>